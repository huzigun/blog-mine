  signature        String
  userId           String    @map("user_id")
  resultCode       String?   @map("result_code")
  resultMsg        String?   @map("result_msg")
  msgSource        String?   @map("msg_source")
  amt              String?
  mid              String?
  buyerEmail       String?   @map("buyer_email")
