# Environment Variables Example
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 교체하세요

# Application
APP_NAME=blog-mine-backend
APP_VERSION=0.0.1

# Server
PORT=9706

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=blog_mine
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d

# CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:8706,http://localhost:3001,http://localhost:3000

# Logging
LOG_LEVEL=info

# Seed User (optional - for development)
SEED_USER_EMAIL=admin@example.com
SEED_USER_NAME=Admin User
SEED_USER_PASSWORD=admin123

# OpenAI
OPENAI_API_KEY=your-openai-api-key
# 요약용 모델 (비용 효율적)
OPENAI_SUMMARY_MODEL=gpt-4o-mini
# 컨텐츠 생성용 모델 (고품질)
OPENAI_GENERATION_MODEL=gpt-4o

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:9706/auth/callback/kakao
KAKAO_ADMIN_KEY=your-kakao-admin-key
